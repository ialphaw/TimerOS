#:import Clock kivy.clock.Clock

Manager:
    Main:
    Second:

<Main>:
    name: 'main'

    bg: 0, 0, 0, 1

    reqText: reqText
    timeText: timeText

    FloatLayout:
        canvas:
            Color:
                rgba: root.bg
            Rectangle:
                pos: self.pos
                size: self.size

        MDTextField:
            id: reqText
            hint_text: "Enter Your Request"
            helper_text: "Shutdown/Restart"
            helper_text_mode: "on_focus"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            size_hint: (0.3, 0.1)

        MDTextField:
            id: timeText
            hint_text: "Timer"
            helper_text: "in seconds"
            helper_text_mode: "on_focus"
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            size_hint: (0.3, 0.1)

        MDRoundFlatButton:
            text: "Start"
            theme_text_color: 'Primary'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint: (0.3, 0.075)
            on_press:
                root.manager.current= 'second'
                Clock.schedule_once(root.btn, 1)



<Second>:
    name: 'second'

    bg: 0, 0, 0, 1

    timer: timer

    FloatLayout:
        canvas:
            Color:
                rgba: root.bg
            Rectangle:
                pos: self.pos
                size: self.size

        MDLabel:
            id: timer
            theme_text_color: 'Primary'
            halign: "center"
