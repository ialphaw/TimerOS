FloatLayout:
    bg: 0, 0, 0, 1

    canvas:
        Color:
            rgba: root.bg
        Rectangle:
            pos: self.pos
            size: self.size

    MDTextField:
        hint_text: "Enter Your Request"
        helper_text: "Shutdown/Restart"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        size_hint: (0.3, 0.1)

    MDTextField:
        hint_text: "Timer"
        helper_text: "in seconds"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.58}
        size_hint: (0.3, 0.1)

    MDRoundFlatButton:
        text: "Start"
        theme_text_color: 'Primary'
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        size_hint: (0.3, 0.075)